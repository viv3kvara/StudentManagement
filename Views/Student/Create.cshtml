<style>
    body {
        font-family: 'Segoe UI', sans-serif;
        background: #f4f6f9;
    }

    .form-container {
        width: 450px;
        margin: 40px auto;
        background: white;
        padding: 25px;
        border-radius: 10px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.1);
    }

    .form-container h2 {
        text-align: center;
        margin-bottom: 20px;
            color: #7b2cbf;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-group input,
    .form-group select {
        width: 100%;
        padding: 10px;
        border-radius: 6px;
        border: 1px solid #ccc;
        font-size: 14px;
    }

    .form-group input:focus,
    .form-group select:focus {
        outline: none;
        border-color: #7b2cbf;
    }

    .btn-save {
        width: 100%;
        padding: 12px;
        background: #7b2cbf;
        color: white;
        border: none;
        border-radius: 6px;
        font-size: 16px;
        cursor: pointer;
        transition: 0.3s;
    }

    .btn-save:hover {
            background: #7b2cbf;
    }
</style>

<div class="form-container">
    <h2>Add Student</h2>

    <form method="post">
        <div class="form-group">
            <input name="FirstName" placeholder="First Name" required />
        </div>

        <div class="form-group">
            <input name="LastName" placeholder="Last Name" required />
        </div>

        <div class="form-group">
            <input name="Age" placeholder="Age" type="number" required />
        </div>

        <div class="form-group">
            <input name="Email" placeholder="Email" type="email" required />
        </div>

        <div class="form-group">
            <select id="CountryId" name="CountryId" required>
                <option value="">Select Country</option>
                @foreach (var c in ViewBag.Country)
                {
                    <option value="@c.Value">@c.Text</option>
                }
            </select>
        </div>

        <div class="form-group">
            <select id="StateId" name="StateId" required>
                <option value="">Select State</option>
            </select>
        </div>

        <div class="form-group">
            <select id="CityId" name="CityId" required>
                <option value="">Select City</option>
            </select>
        </div>

        <button class="btn-save">Save Student</button>
    </form>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $("#CountryId").change(function () {
        $.get("/Student/GetState", { id: this.value }, function (d) {
            $("#StateId").empty().append('<option value="">Select State</option>');
            $("#CityId").empty().append('<option value="">Select City</option>');
            $.each(d, function (i, v) {
                $("#StateId").append(`<option value="${v.value}">${v.text}</option>`);
            });
        });
    });

    $("#StateId").change(function () {
        $.get("/Student/GetCity", { id: this.value }, function (d) {
            $("#CityId").empty().append('<option value="">Select City</option>');
            $.each(d, function (i, v) {
                $("#CityId").append(`<option value="${v.value}">${v.text}</option>`);
            });
        });
    });
</script>
