<style>
    body {
        font-family: 'Segoe UI', sans-serif;
        background: #f6f4fb;
    }

    .page-container {
        width: 90%;
        margin: 30px auto;
    }

    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

        .header h2 {
            color: #4b2e83;
        }

    .btn-add {
        padding: 10px 18px;
        background: #7b2cbf;
        color: white;
        text-decoration: none;
        border-radius: 6px;
        font-size: 14px;
        transition: 0.3s;
    }

        .btn-add:hover {
            background: #5a189a;
            /* color:white; */
        }

    table {
        width: 100%;
        border-collapse: collapse;
        background: white;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 8px 20px rgba(0,0,0,0.08);
    }

    th {
        background: #7b2cbf;
        color: white;
        padding: 12px;
        text-align: left;
    }

    td {
        padding: 12px;
        border-bottom: 1px solid #eee;
        color: #333;
    }

    tr:hover {
        background: #f3e8ff;
    }

    .btn {
        padding: 6px 12px;
        border: none;
        border-radius: 5px;
        color: white;
        cursor: pointer;
        font-size: 13px;
        text-decoration: none;
    }

    .btn-edit {
        background: #9d4edd;
    }

        .btn-edit:hover {
            background: #7b2cbf;
        }

    .btn-delete {
        background: #d00000;
    }

        .btn-delete:hover {
            background: #9d0208;
        }

    .empty {
        text-align: center;
        padding: 20px;
        color: #777;
    }
</style>

<div class="page-container">
    <div class="header">
        <h2>Student List</h2>
        <a href="/Student/Create" class="btn-add">+ Add Student</a>
    </div>

    <table>
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th>Email</th>
            <th>Country</th>
            <th>State</th>
            <th>City</th>
            <th>Action</th>
        </tr>

        @if (Model != null && Model.Count > 0)
        {
            foreach (var s in Model)
            {
                <tr>
                    <td>@s.Name</td>
                    <td>@s.Age</td>
                    <td>@s.Email</td>
                    <td>@s.Country</td>
                    <td>@s.State</td>
                    <td>@s.City</td>
                    <td>
                        <a href="/Student/Edit/@s.StudentId" class="btn btn-edit">Edit</a>
                        <a href="/Student/Delete/@s.StudentId"
                           class="btn btn-delete"
                           onclick="return confirm('Are you sure you want to delete this student?');">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="empty">No students found</td>
            </tr>
        }
    </table>
</div>
